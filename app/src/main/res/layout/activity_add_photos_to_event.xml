<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <!-- Heading for Add Photos -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Photos"
            android:textSize="24sp"
            android:layout_gravity="center_horizontal"/>

        <!-- ImageView for Photo 1 -->
        <ImageView
            android:id="@+id/photo1ImageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:background="@android:color/darker_gray"/>

        <!-- Button to Add Photo 1 -->
        <Button
            android:id="@+id/addPhoto1Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Photo 1"
            android:layout_marginTop="8dp"/>

        <!-- ImageView for Photo 2 -->
        <ImageView
            android:id="@+id/photo2ImageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:background="@android:color/darker_gray"/>

        <!-- Button to Add Photo 2 -->
        <Button
            android:id="@+id/addPhoto2Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Photo 2"
            android:layout_marginTop="8dp"/>

        <!-- ImageView for Photo 3 -->
        <ImageView
            android:id="@+id/photo3ImageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:background="@android:color/darker_gray"/>

        <!-- Button to Add Photo 3 -->
        <Button
            android:id="@+id/addPhoto3Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Photo 3"
            android:layout_marginTop="8dp"/>

        <!-- Done Button -->
        <Button
            android:id="@+id/doneButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Done"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</ScrollView>